<resources>

    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <!-- Theme colours -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorSecondary</item>

        <!-- Force ActionMode to appear over toolbar -->
        <item name="windowActionModeOverlay">true</item>

        <!-- ActionMode background color -->
        <item name="actionModeBackground">@color/colorSecondary</item>

        <!-- ActionMode back button -->
        <item name="actionModeCloseDrawable">
            @drawable/ic_arrow_back_white_24dp
        </item>

        <!-- Enable window transitions -->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Toolbar back button colour -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>
</resources>
